# LlamaExtract Configuration
LLAMA_CLOUD_API_KEY=your_llama_cloud_api_key_here
LLAMA_EXTRACT_AGENT_NAME=resume-screening-api
LLAMA_EXTRACT_TIMEOUT=300

# OpenAI Configuration (for AI-powered resume tailoring)
# Optional: If not set, AI tailoring will be disabled
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# API Configuration
API_TITLE=Resume Screening API
API_VERSION=1.0.0
DEBUG=false

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# DigitalOcean Spaces (S3-compatible) Settings
# Toggle to enable Spaces integration
USE_SPACES=false
# Example: https://nyc3.digitaloceanspaces.com
SPACES_ENDPOINT_URL=
# Example: nyc3
SPACES_REGION=
SPACES_ACCESS_KEY_ID=
SPACES_SECRET_ACCESS_KEY=
SPACES_BUCKET_NAME=
# Optional subfolder/prefix inside the bucket
SPACES_KEY_PREFIX=
# public-read or private
SPACES_ACL=public-read
# Optional CDN base URL (e.g., https://cdn.example.com). If set, returned URLs use this.
SPACES_CDN_BASE_URL=
# If true, delete local file after successful upload to Spaces
SPACES_DELETE_LOCAL_AFTER_UPLOAD=false

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO

# Database (optional)
# For PostgreSQL (async SQLAlchemy with psycopg3):
# postgresql+psycopg://USER:PASSWORD@HOST:PORT/DB_NAME
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/resume_db
USE_IN_MEMORY_DB=false
